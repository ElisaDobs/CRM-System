
@{
    Layout = null;
    string MemberID = ViewBag.MemGuid;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Upload Signed Acceptance Letter</title>
    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <!--<link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />-->
    </environment>
    <style type="text/css">
        .tipp-banner {
            left: 25%;
            position: relative;
            top: -20px;
            width: 60%;
        }

        .tipp-header {
            color: #6d2829;
        }

        .tipp-progressbar {
            left: 25%;
            position: relative;
        }

        .tipp-label {
            color: #377091;
        }

        .tipp-input-field {
            width: 85%;
        }

        .tipp-container {
            width: 100%;
            display: inline-block;
        }

        .tipp-left-align {
            width: 15%;
            display: inline-block;
        }

        .tipp-middle-align {
            width: 60%;
            display: inline-block;
        }

        .tipp-right-align {
            width: 15%;
            display: inline-block;
        }

        .tipp-error-message {
            color: red;
            width: 100%;
            text-align: left;
            display: none;
        }

        .tipp-btn-default {
            width: 120px;
            color: #6d2829;
        }

        .tipp-btn-container {
            width: 100%;
            left: 10%;
            position: relative;
            text-align: left;
        }

        .tipp-redirect-link {
            color: #377091;
        }

        a {
            color: #377091;
        }

        .tipp-logo-botton-line {
            background-color: #377091;
            width: 100%;
            height: 10px
        }

        .tipp-logo {
            padding-top: 0px;
            top: 5px;
            position: absolute;
        }
    </style>
</head>
<body>
    <div class="tipp-banner">
        <img src="~/tipp-academy-logo.png" width="160" height="45" />
        <div class="tipp-logo-botton-line">
            &nbsp;
        </div>
    </div>
    <div class="container">
        <div class="tipp-btn-container">
            <div class="tipp-middle-align">
                <h4 class="tipp-header">Upload Signed Acceptance Letter</h4>
                <div class="progress">
                    <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100" style="width:80%">
                        4 of 5 steps
                    </div>
                </div>
                <div>
                    @using (Html.BeginForm("SaveSignedAcceptenceLetter", "Application", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        <input type="hidden" name="MemberID" value="@MemberID" />
                        <input type="hidden" name="UploadTypeID" value="12" />
                        <div class="form-group">
                            <label for="SignedLetter" class="tipp-label">Signed Acceptance of Learner of Code of Conduct</label>
                            <input type="file" name="SignedLetter" class="form-control tipp-input-field" />
                        </div>
                        <div>
                            <button type="submit" class="btn btn-default tipp-btn-default">Upload</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</body>
</html>
