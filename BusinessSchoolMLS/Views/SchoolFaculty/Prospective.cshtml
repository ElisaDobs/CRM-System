
@using BusinessSchoolMLS.SchoolBusinessComponent;

@{
    ViewData["Title"] = "Applicant Enrollment Status";

    string stguid = ViewBag.StudentID;
    LoginBusinessComponent loginBusinessComponent = new LoginBusinessComponent();
    FacultyBusinessComponent facultyBusinessComponent = new FacultyBusinessComponent();
    int MemberID = loginBusinessComponent.GetMemberIDByMemberGuid(stguid);
    var lst_all_enroll_status = facultyBusinessComponent.GetStudentFlowStatusByMemberID(MemberID);
    int Counter = 1;
}
<div>
    &nbsp;
</div>
<div>
    <h4 style="color: #6d2829;">Applicant Enrollment Status</h4>
</div>


<style type="text/css">
    body {
        margin: 40px;
    }

    .stepwizard-step p {
        margin-top: 10px;
    }

    .stepwizard-row {
        display: table-row;
    }

    .stepwizard {
        display: table;
        width: 100%;
        position: relative;
    }

    .stepwizard-step button[disabled] {
        opacity: 1 !important;
        filter: alpha(opacity=100) !important;
    }

    .stepwizard-row:before {
        top: 14px;
        bottom: 0;
        position: absolute;
        content: " ";
        width: 100%;
        height: 1px;
        background-color: #ccc;
        z-order: 0;
    }

    .stepwizard-step {
        display: table-cell;
        text-align: center;
        position: relative;
    }

    .btn-circle {
        width: 30px;
        height: 30px;
        text-align: center;
        padding: 6px 0;
        font-size: 12px;
        line-height: 1.428571429;
        border-radius: 15px;
    }
</style>

<div>
    <br />
</div>

<div class="stepwizard">
    <div class="stepwizard-row">
        @foreach (var status in lst_all_enroll_status)
        {
            if (status.EnrollStatus)
            {
                if (status.ToActioned)
                {
                    <div class="stepwizard-step">
                        <button type="button" class="btn btn-primary btn-circle" style="background-color: forestgreen;">@Html.ActionLink((Counter++).ToString(), "DocumentVerify", "Administration", new { mid = ViewBag.MemGuid, uid = stguid })</button>
                        <p>@status.ErollmentStatusName</p>
                    </div>
                }
                else
                {
                    <div class="stepwizard-step">
                        <button type="button" class="btn btn-default btn-circle" style="background-color: forestgreen;">@(Counter++)</button>
                        <p>@status.ErollmentStatusName</p>
                    </div>
                }
            }
            else
            {
                <div class="stepwizard-step">
                    <button type="button" class="btn btn-default btn-circle">@(Counter++)</button>
                    <p>@status.ErollmentStatusName</p>
                </div>
            }
        }
    </div>
</div>

